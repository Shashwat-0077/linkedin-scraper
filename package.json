{
    "name": "linkedin-job-scraper",
    "version": "1.0.0",
    "description": "LinkedIn job scraper using Playwright and TypeScript",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "npm run build && node dist/index.js",
        "dev": "tsx src/index.ts",
        "api": "tsx src/api/server.ts",
        "api:build": "tsc && node dist/api/server.js",
        "install-browsers": "npx playwright install chromium"
    },
    "keywords": [
        "linkedin",
        "scraper",
        "playwright",
        "jobs",
        "typescript"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.1",
        "google-auth-library": "^10.5.0",
        "googleapis": "^167.0.0",
        "playwright": "^1.40.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/node": "^20.10.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0"
    }
}